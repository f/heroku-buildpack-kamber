#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3
CRYSTAL_URL="https://github.com/manastech/crystal/releases/download/0.10.0/crystal-0.10.0-1-linux-x86_64.tar.gz"
CRYSTAL_DIR=/tmp/crystal
unset GIT_DIR

# Install Crystal
echo "-----> Installing Crystal"
mkdir -p $CRYSTAL_DIR
curl -sL $CRYSTAL_URL | tar xz -C $CRYSTAL_DIR --strip-component=1

# Build the project
cd $BUILD_DIR

if [ -f shard.yml ]; then
  echo "-----> Installing Dependencies"
  $CRYSTAL_DIR/embedded/bin/shards install
fi

echo "-----> Compiling Kamber"
$CRYSTAL_DIR/bin/crystal build src/kamber.cr --release
